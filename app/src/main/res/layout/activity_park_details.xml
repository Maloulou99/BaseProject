<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/parkImageView"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/coordinatesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/parkImageView"
        app:layout_constraintTop_toBottomOf="@id/parkImageView"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/parkNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/coordinatesTextView"
        app:layout_constraintTop_toBottomOf="@id/coordinatesTextView"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <Button
        android:id="@+id/descriptionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:text="@string/description"
        app:layout_constraintStart_toStartOf="@id/parkNameTextView"
        app:layout_constraintTop_toBottomOf="@id/parkNameTextView" />

    <Button
        android:id="@+id/floraButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart="150dp"
        android:text="@string/flora"
        app:layout_constraintStart_toStartOf="@id/parkNameTextView"
        app:layout_constraintTop_toBottomOf="@id/parkNameTextView" />

    <Button
        android:id="@+id/faunaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:layout_marginTop="0dp"
        android:text="@string/fauna"
        app:layout_constraintStart_toStartOf="@id/parkNameTextView"
        app:layout_constraintTop_toBottomOf="@id/parkNameTextView" />


    <TextView
        android:id="@+id/floraTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/floraButton"
        app:layout_constraintTop_toBottomOf="@id/floraButton"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/faunaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/faunaButton"
        app:layout_constraintTop_toBottomOf="@id/faunaButton"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/descriptionButton"
        app:layout_constraintTop_toBottomOf="@id/descriptionButton"
        android:layout_marginTop="16dp"
        android:visibility="gone" />



</androidx.constraintlayout.widget.ConstraintLayout>
